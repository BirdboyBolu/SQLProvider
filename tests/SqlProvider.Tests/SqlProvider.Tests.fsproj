<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="../../netfx.props" />
  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFrameworks>netcoreapp3.1</TargetFrameworks>
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
    <AssemblyName>SqlProvider.Tests</AssemblyName>
  </PropertyGroup>
  <PropertyGroup>
    <IsWindows Condition="'$(OS)' == 'Windows_NT'">true</IsWindows>
  </PropertyGroup>
  <PropertyGroup Condition="'$(IsWindows)' != 'true'">
    <IsOSX Condition="'$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::OSX)))' == 'true'">true</IsOSX>
    <IsLinux Condition="'$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::Linux)))' == 'true'">true</IsLinux>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="QueryTests.fs" />
    <Compile Include="CrudTests.fs" />
    <Compile Include="PostgreSQLTests.fs" />
    <Compile Include="SqlServerTests.fs" />
    <Content Include="app.config" />
    <None Include="x86\SQLite.Interop.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="x64\SQLite.Interop.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="System.Threading.Tasks.Extensions.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="OracleTests.fsx" />
    <None Include="SQLLiteTests.fsx" />
    <None Include="Northwind.accdb" />
    <None Include="Mono.Data.Sqlite.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Include="paket.references" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\src\SQLProvider.Runtime\SQLProvider.Runtime.fsproj" />
  </ItemGroup>
  <Target Name="CopyLibrariesWin">
    <!-- Note also the physical architecture (x86/x64/arm) of SQLitePCLRaw.lib.e_sqlite3 Win: -->
    <Exec Command="xcopy ..\..\packages\tests\SQLitePCLRaw.provider.dynamic_cdecl\lib\netstandard2.0\SQLitePCLRaw.provider.dynamic_cdecl.dll temp\ /y" />
    <Exec Command="xcopy ..\..\packages\tests\SQLitePCLRaw.core\lib\netstandard2.0\SQLitePCLRaw.core.dll temp\ /y" />
    <Exec Command="xcopy ..\..\packages\tests\SQLitePCLRaw.lib.e_sqlite3\runtimes\win10-x86\nativeassets\uap10.0\e_sqlite3.dll temp\ /y" />
    <Exec Command="xcopy ..\..\packages\tests\SQLitePCLRaw.bundle_green\lib\netcoreapp3.0\SQLitePCLRaw.nativelibrary.dll temp\ /y" />
    <Exec Command="xcopy ..\..\packages\tests\SQLitePCLRaw.bundle_green\lib\netcoreapp3.0\SQLitePCLRaw.batteries_v2.dll temp\ /y" />
    <Exec Command="xcopy ..\..\packages\tests\Microsoft.Data.Sqlite.Core\lib\netstandard2.0\Microsoft.Data.Sqlite.dll temp\ /y" />
  </Target>
  <Target Name="CopyLibrariesNonWin">
    <Exec Command="mkdir -p temp" />
    <Exec Condition="'$(IsOSX)' == 'true'" Command="cp ../../packages/tests/SQLitePCLRaw.lib.e_sqlite3/runtimes/osx-x64/native/libe_sqlite3.dylib temp/ " />
    <!-- Note also the physical architecture (x86/x64/arm) of SQLitePCLRaw.lib.e_sqlite3 Linux: -->
    <Exec Condition="'$(IsLinux)' == 'true'" Command="cp ../../packages/tests/SQLitePCLRaw.lib.e_sqlite3/runtimes/linux-x86/native/libe_sqlite3.so temp/ " />
    <Exec Command="cp ../../packages/tests/SQLitePCLRaw.bundle_green/lib/netstandard2.0/SQLitePCLRaw.batteries_v2.dll temp/ " />
    <Exec Command="cp ../../packages/tests/SQLitePCLRaw.core/lib/netstandard2.0/SQLitePCLRaw.core.dll temp/ " />
    
    <Exec Command="cp ../../packages/tests/Microsoft.Data.Sqlite.Core.Backport/lib/net45/Microsoft.Data.Sqlite.dll temp/ " />
  </Target>
  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <CallTarget Targets="CopyLibrariesWin" Condition="'$(IsWindows)' == 'true'"/>
    <CallTarget Targets="CopyLibrariesNonWin" Condition="'$(IsWindows)' != 'true'"/>
  </Target>  
  <Target Name="BeforeBuild">
  </Target>
  <Target Name="AfterBuild">
  </Target>
  <Import Project="..\..\.paket\Paket.Restore.targets" />

</Project>